.section {
  width: 100%;
  display: flex;
  border-bottom: 1px solid gainsboro;
  height: 70rpx;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 10rpx 0 10rpx;
}

.section>input {
  width: 80%;
  height: 70rpx;
}

.sections {
  width: 100%;
  display: flex;
  height: 70rpx;
  margin: 20rpx 10rpx 0 10rpx;
  align-items: center;
  justify-content: space-between;
}

.sections>input {
  width: 30%;
  height: 70rpx;
}

.sections>view:last-child {
  color: greenyellow;
  height: 80rpx;
  background: #eee;
}
