.message {
  width: 100%;
  height: 280rpx;
  background: linear-gradient(to right, orange, orangered);
  display: flex;
  justify-content: space-between;
}

.message>view:last-child {
  display: flex;
}

.message>view:first-child {
  color: white;
  font-size: 46rpx;
  margin: 16rpx;
  font-weight: 700;
}

.message>view:last-child view {
  color: white;
  font-size: 36rpx;
  margin: 16rpx;
}

.messName {
  width: 94%;
  position: absolute;
  top: 150rpx;
  display: flex;
  justify-content: space-around;
  height: 190rpx;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  left: 20rpx;
  box-shadow: 0px 0px 20px gray;
}

.messName image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.messName view {
  text-align: center;
  font-size: 34rpx;
}

.messNull>image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 50rpx;
}

.messNull {
  width: 300rpx;
  margin: 0 auto;
  margin-top: 240rpx;

}
.messNull>view{
  font-size: 32rpx;
  color: gray;
  text-align: center;
}