/**index.wxss**/

.slide-image {
  width: 100%;
  height: 240rpx;
}

.frist_img {
  width: 96rpx;
  height: 80rpx;
  margin-left: 18rpx;
}

.fristImg {
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: center;
}

.fristImg1 {
  width: 18%;
  margin: 16rpx 0;
}

.fristImg1>view {
  font-size: 24rpx;
  text-align: center;
}

.shopFrist {
  width: 100%;
  height: 200rpx;
  background: ghostwhite;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.shopImg {
  width: 120rpx;
  height: 80rpx;
  margin-top: 30rpx;
}

.showUp {
  width: 75%;
  height: 140rpx;
  background: white;
  border-radius: 20rpx;
}

.gowarp {
  display: flex;
  justify-content: space-around;
  margin-left: 14rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
}

.info {
  font-size: 22rpx;
  color: white;
  width: 70rpx;
  height: 30rpx;
  border-radius: 10rpx;
  background: linear-gradient(to right, orange, orangered);
  text-align: center;
  margin-top: 46rpx;
  margin-right: 10rpx;
}

.remove_one {
  font-size: 28rpx;
  color: orangered;
  text-align: center;
}

.remove_two {
  font-size: 24rpx;
  color: gainsboro;
  text-decoration: line-through;
  text-align: center;
}

.scroll-view_H {
  display: flex;
  white-space: nowrap;
  height: 260rpx;
  border-bottom: 1px solid gainsboro;
}

.new_top {
  display: inline-block;
  margin: 0 16rpx;
}

.todyGoods {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 16rpx 0;
}

.times {
  color: gray;
  font-size: 26rpx;
  margin-left: 16rpx;
}

.timeShop {
  width: 100%;
  height: 240rpx;
  display: flex;
  justify-content: space-around;
}

.timeGoods {
  margin: 16rpx 0;
}

.time_goods {
  border-bottom: 1px solid gainsboro;
  height: 330rpx;
  display: flex;
  width: 100%;

}

.time {
  border-right: 1px solid gainsboro;
  width: 51%;
  height: 330rpx;
}



/* 返回顶部 */
.goTop{
  height: 90rpx;
  width: 90rpx;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  border-radius: 50%;
  background: white;
}

.tody{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-flow: wrap;
  justify-content: space-around;

}
.goodsName{
  width: 340rpx;
  display: flex;
  margin: 16rpx 0;
}
.hotShops{
  width: 100%;
  height: 1240rpx;
}
.like{
  width: 100%;
  height: 90rpx;
}
.like1{
  width: 330rpx;
  margin: 0 auto;
}
.like1>text{
  margin: 0 10rpx;
}
.search{
  width: 80%;
  height: 60rpx;
  display: flex;
  background:ghostwhite;
  position: fixed;
  top:14rpx;
  z-index: 1;
  left: 70rpx;
  border-radius: 50rpx;
  opacity: .8
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}